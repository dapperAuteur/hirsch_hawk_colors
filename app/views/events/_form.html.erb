<%= form_for(@event) do |f| %>
    <%#= render 'shared/error_messages' %>
    
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form_control' %>
    
    <%= f.label :classroom %>
    <%= f.radio_button :classroom, class: 'form_control' %>
    
    <%= f.label :meal %>
    <%= f.radio_button :meal, class: 'form_control' %>
    
    <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>
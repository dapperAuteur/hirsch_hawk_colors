<% provide(:title, @event_attendance_record.id) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
           <h1>
               <%= @event_attendance_record.id %>
           </h1>
        </section>
    </aside>
</div>
<div class="table table-striped table-bordered">
  <h1><%= @event_attendance_record.event.name %></h1>
    <table>
      <thead class="thead">
        <tr>
          <th>Student First Name</th>
          <th>Student Last Name</th>
          <th>Allergies</th>
          <th>Teacher</th>
          <th>Present</th>
          <th>Brought Lunch</th>
          <th>Fed</th>
          <th>Milk Only</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Destroy</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tr>
        <td><%= @event_attendance_record.student.fname %></td>
        <td><%= @event_attendance_record.student.lname %></td>
        <td><%= @event_attendance_record.student.my_allergies %></td>
        <td><%= @event_attendance_record.student.my_teacher %></td>
        <td><%= @event_attendance_record.present %></td>
        <td><%= @event_attendance_record.brought_lunch %></td>
        <td><%= @event_attendance_record.fed %></td>
        <td><%= @event_attendance_record.milk_only %></td>
        <td><%= link_to 'Show', @event_attendance_record %></td>
        <td><%= link_to 'Edit', edit_event_attendance_record_path(@event_attendance_record) %></td>
        <td><%= link_to 'Destroy', @event_attendance_record, method: :delete,
                                         data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </table>
</div>